modules = ["web", "python-3.11", "nodejs-20"]
[agent]
expertMode = true
integrations = ["python_database:1.0.0", "python_openai:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "openssl", "postgresql"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "flask-app"

[[workflows.workflow]]
name = "flask-app"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 32991
externalPort = 3000

[[ports]]
localPort = 34483
externalPort = 3001

[[ports]]
localPort = 41997
externalPort = 3002

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]
